    "type": "git",
    "url": "https://github.com/ruojs/ruo/tree/master/packages/ruo"
  },
  "files": [
    "dist",
    "resources"
  ],
  "keywords": [
    "ruo"
  ],
  "author": "zhongchiyu@gmail.com",
  "license": "MIT",
  "dependencies": {
    "co": "^4.6.0",
    "connect-redis": "^3.2.0",
    "debug": "^2.2.0",
    "express": "^4.14.0",
    "express-session": "^1.15.0",
    "glob": "^7.0.5",
    "ioredis": "^2.5.0",
    "js-yaml": "^3.6.1",
    "json-refs": "^2.1.6",
    "lodash": "^4.15.0",
    "mcfg": "^0.1.0",
    "mock-req": "^0.2.0",
    "moder": "^1.3.2",
    "path-to-regexp": "^1.6.0",
    "rc": "^1.1.6",
    "router": "^1.1.4",
    "ruo-swagger-parser": "0.2.0",
    "sequelize": "^4.37.8",
    "serve-static": "^1.11.1",
    "shimmer": "^1.1.0",
    "socket.io": "^2.1.1",
    "socket.io-client": "^2.1.1",
    "socket.io-express-session": "^0.1.3",
    "socket.io-redis": "^5.2.0",
    "statuses": "^1.3.0",
    "superagent": "^3.1.0",
    "superagent-defaults": "^0.1.14",
    "supertest": "^2.0.1",
    "uppercamelcase": "^1.1.0",
    "waterline": "^0.11.6",
    "winston": "^2.2.0",
    "winston-common-sentry": "^0.1.1",
    "winston-daily-rotate-file": "^1.2.0",
    "winston-logstash": "^0.2.11",
    "z-schema": "^3.17.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^6.1.0",
    "@commitlint/config-conventional": "^6.1.0",
    "babel-cli": "^6.10.1",
    "babel-eslint": "^6.0.4",
    "babel-plugin-istanbul": "^1.0.3",
    "babel-plugin-transform-async-to-generator": "^6.8.0",
    "babel-plugin-transform-es2015-classes": "^6.9.0",
    "babel-plugin-transform-es2015-destructuring": "^6.8.0",
    "babel-plugin-transform-es2015-parameters": "^6.9.0",
    "babel-plugin-transform-es2015-spread": "^6.8.0",
    "babel-plugin-transform-strict-mode": "^6.8.0",
    "babel-register": "^6.9.0",
    "basic-auth": "^1.0.4",
    "body-parser": "^1.15.2",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint-plugin-babel": "^3.2.0",
    "husky": "^0.14.3",
    "mocha": "^3.0.2",
    "mock-fs": "4.4.2",
    "mysql": "^2.14.1",
    "nyc": "^7.0.0",
    "sinon": "^1.17.6",
    "sinon-chai": "^2.8.0",
    "standard": "^8.4.0"
  },
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "babel src -d dist --copy-files",
    "prewatch": "rm -rf dist",
    "watch": "babel src -d dist --copy-files -w",
    "lint": "standard",
    "test": "NODE_ENV=test babel-node ./node_modules/.bin/_mocha --reporter spec $npm_package_options_mocha 'src/**/*.test.js' 'resources/test/**/*.test.js'",
    "cover": "NODE_ENV=test nyc --reporter html --reporter text ./node_modules/.bin/mocha $npm_package_options_mocha 'src/**/*.test.js' 'resources/test/**/*.test.js'",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "prepublish": "npm run build"
  },
  "options": {
    "mocha": "resources/mocha-bootload --colors --full-trace --timeout 10000"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/**/*.test.js"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "dist",
      "coverage"
    ],
    "envs": [
      "mocha"
    ],
    "globals": [
      "api",
      "socket",
      "createSocket"
    ]
  },
  "engines": {
    "node": ">=6.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
